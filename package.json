    "karma-mocha": "^2.0.1",
    "mocha": "^7.1.1",
    "semantic-release": "^17.1.1"
  },
  "release": {
    "branches": ["master"],
    "verifyConditions": {
      "path": "./node_modules/semantic-release/src/lib/plugin-noop.js"
    }  
  }
